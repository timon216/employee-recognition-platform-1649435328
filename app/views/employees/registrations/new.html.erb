<div class="card border-secondary login-card" style="max-width: 24rem;">
  <h2 class="card-header text-center">Sign up</h2>
  <div class="m-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "employees/shared/error_messages", resource: resource %>

      <div class="field form-group mb-3">
        <%# <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %>
      </div>

      <div class="field  form-group mb-3">
        <%# <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Password" %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %><br />
      </div>

      <div class="field form-group mb-3">
        <%# <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Password confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-dark align-self-start mb-2" %>
      </div>
    <% end %>

    <%= render "employees/shared/links" %>
  </div>
</div>
