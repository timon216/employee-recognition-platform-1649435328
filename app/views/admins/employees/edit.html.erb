<div style="max-width: 50rem;">
    <h1>Editing Employee Account</h1>

    <%= form_with(model: [:admins, @employee]) do |f| %>

    <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-2" %>
    </div>

    <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-2" %>
    </div>

    <div class="field form-group mb-2" style="width: 7rem">
        <%= f.label :available_kudos %><br>
        <%= f.number_field :number_of_available_kudos, in: 0..10, autofocus: true, class:"form-control", placeholder:"Number of kudos"%>
    </div>

    <div class="actions">
        <%= f.submit "Update", class:"btn btn-secondary mb-2" %>
    </div>
    <% end %>

    <%= link_to 'Back', admins_employees_path, class:"btn btn-dark align-self-start mb-2" %>
</div>
